{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "isolatedModules": true,
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "coverage"],
  "extends": "@tsconfig/node22/tsconfig.json"
}
