extends ../layouts/application.pug

block header
  = t('views.tasks.editTask')

block content
  +formFor()(action=`/tasks/${task.id}/edit` method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)(type="text", rows=3)
    +select(task, 'statusId', 'status', errors, statuses)(type="text")
    +select(task, 'executorId', 'executor', errors, users)(type="text")
    +submit(task)(value=t('views.tasks.edit'))