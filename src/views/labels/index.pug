extends ../layouts/application.pug

block header
  = t('views.labels.labelsList')


block content
  a.btn.btn-primary.mt-3.mb-3(href='/labels/new')= t('views.labels.createLabel')
  .table-responsive
    table.table.table-borderless.table-striped.mt-5
      thead
        tr
          th= t('views.labels.id')
          th= t('views.labels.name')
          th= t('views.labels.createdAt')
      tbody
        each label in labels
          tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
              .d-flex.flex-wrap
                a.btn.btn-primary.me-3.mb-3(href=`/labels/${label.id}/edit`)= t('views.labels.edit.submit')
                form(action=`/labels/${label.id}/delete`, method = 'post')
                  input.btn.btn-danger(type='submit', value=t('views.labels.delete'))